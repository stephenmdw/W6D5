
<% if type == :new %>
    <% action_url = cats_url %>
    <% button_text = "Create cat" %>
<% else %>
    <% action_url = cat_url(cat) %>
    <% button_text = "Update cat" %>
<% end %>

<form action="<% action_url %>"  method= "POST">


    <% if type == :edit %>
        <input type="hidden" name="_method" value="PATCH">
    <% end %>


    <label> Name: 
        <input type = "text" name = "cat[name]" value = "<%= cat.name %>"  >
    </label>

    <br>
    
    <label> Birthday: 
        <input type = "date" name = "cat[birth_date]" value = "<%= cat.birth_date %>" >
    </label>
    <br>

    <label> Gender: 
        <select id="sex" name="cat[sex]" selected = "<%cat.sex%>">
            <option selected disabled> --Select a gender-- </option>
            <option <%= cat.sex == 'M' ? 'selected' : '' %> >M</option>
            <option <%= cat.sex == 'F' ? 'selected' : '' %> >F</option>
        </select>
    </label>

    <br>

    <label for="color">Color</label> 
        <select id ="color" name="cat[color]" >
        <option selected disabled> --Select a color-- </option>
        <% @cat_colors.each do |color| %>
            <option <%=cat.color == color ? 'selected' : ''%> ><%= color %></option>
        <% end %>>
        </select>
    <br>

    <input type="submit" value=<%=button_text%>>

</form>

        

    

